{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "**/*.csproj"
                    ],
                    "exclude": [
                        "**/*Tests/*"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "Bricelam.PowerFx.Linq",
            "_appTitle": "Bricelam.PowerFx.Linq Docs",
            "_enableSearch": true,
            "_disableContribution": true,
            "_disableBreadcrumb": true,
            "_disableNextArticle": true,
            "_disableTocFilter": true
        }
    }
}
